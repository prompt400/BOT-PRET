{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "./Dockerfile",
    "watchPatterns": [
      "src/**/*.ts",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "tsx src/index.ts",
    "healthcheck": {
      "type": "http",
      "path": "/health",
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "gracePeriod": 30
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "runtime": "V2",
    "region": "us-west1"
  },
  "environments": {
    "production": {
      "deploy": {
        "replicas": 1,
        "cpu": "100m",
        "memory": "256Mi"
      }
    }
  }
}
