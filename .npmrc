# Configuration NPM pour le projet BOT-PRET

# Utiliser --omit=dev au lieu de --production (déprécié)
omit=dev

# Désactiver le financement des packages pour accélérer l'installation
fund=false

# Activer l'audit automatique lors de l'installation
audit=true

# Niveau d'audit (low, moderate, high, critical)
audit-level=moderate

# Enregistrer les versions exactes des dépendances
save-exact=true

# Configuration du registre
registry=https://registry.npmjs.org/

# Timeout pour les requêtes réseau (en millisecondes)
timeout=60000

# Activer la mise en cache
cache=true
